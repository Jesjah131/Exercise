<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jegge.exercise.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lägg till träningspass"
        android:id="@+id/AddNewExerciseBtn"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ny session"
        android:id="@+id/NewSessionBtn"
        android:layout_below="@+id/AddNewExerciseBtn"
        android:layout_marginTop="57dp"
        android:layout_alignRight="@+id/AddNewExerciseBtn"
        android:layout_alignEnd="@+id/AddNewExerciseBtn"
        android:layout_alignLeft="@+id/AddNewExerciseBtn"
        android:layout_alignStart="@+id/AddNewExerciseBtn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Github commit fungerade! xP"
        android:id="@+id/textView"
        android:layout_below="@+id/NewSessionBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />

    <Button
        android:text="Manage workouts and Exercies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/ButtonForManageWorkoutAndExercies"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
